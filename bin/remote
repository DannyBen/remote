#!/usr/bin/env ruby

prefix = File.expand_path(File.join(File.dirname(__FILE__), '..', 'lib'))
require "#{prefix}/remote"

app = Remote::App.new
if __FILE__ == $0
  if ARGV.first == '--sample'
    app.write_sample

  elsif ARGV.first == "--list"
    app.list

  elsif ARGV.empty?
    cmd = File.basename($0)
    app.help(cmd)

  else
    servers = ARGV.shift.to_s.split(',')
    command = ARGV.join(' ')

    app.run servers, *command
  end
end
